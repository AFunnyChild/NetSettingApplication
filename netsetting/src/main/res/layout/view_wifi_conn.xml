<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="730px"
    android:layout_height="709px"

    android:layout_gravity="center"
    android:background="@mipmap/bg_setting_wifi_dialog"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_wifi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Large Text"
         android:textSize="@dimen/activity_setting_menu_text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textStyle="bold" />




        <LinearLayout
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="47px"
            android:paddingRight="47px"
            android:paddingBottom="64px"
            android:paddingTop="103px" >

            <RelativeLayout
             android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="70px">
                <View
                    android:layout_alignParentBottom="true"
                    android:background="#D5D5D5"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <TextView
                android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:id="@+id/txt_label_signal_strength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/activity_setting_text"
                    android:text="@string/signal_strength"
                    android:textColor="@color/color_666666" />

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:id="@+id/txt_signal_strength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/signal_strength"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/activity_setting_text"
                    android:textStyle="bold" />
            </RelativeLayout>


<RelativeLayout
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="70px">
    <View
        android:layout_alignParentBottom="true"
        android:background="#D5D5D5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:id="@+id/txt_label_security_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/activity_setting_text"
        android:text="@string/security_level"
        android:textColor="@color/color_666666" />

    <TextView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_weight="1"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:id="@+id/txt_security_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/security_level"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/activity_setting_text"
        android:textStyle="bold" />

</RelativeLayout>


            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="70px">
                <View
                    android:layout_alignParentBottom="true"
                    android:background="#D5D5D5"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:id="@+id/txt_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/activity_setting_text"
                    android:text="@string/password"
                    android:textColor="@color/color_666666" />

                <EditText
                    android:layout_marginLeft="60px"
                    android:background="@null"
                    android:layout_toRightOf="@+id/txt_password"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:textSize="@dimen/activity_setting_text"
                    android:textColor="@color/color_666666" />
            </RelativeLayout>



            <CheckBox
               android:layout_weight="1"
                android:gravity="center_vertical"
                android:id="@+id/cbx_show_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:textSize="@dimen/activity_setting_text"
                android:text="@string/show_password"
                android:textColor="@color/color_666666" />
        </LinearLayout>




    <LinearLayout
        android:layout_marginLeft="48px"
        android:layout_marginRight="48px"
        android:layout_marginBottom="36px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_marginRight="24px"
            android:background="@drawable/btn_setting_cancel"
            android:id="@+id/txt_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center"
            android:padding="20dp"
            android:textSize="@dimen/activity_setting_text"
            android:text="@string/cancel"
            android:textColor="@color/color_666666" />



        <TextView
            android:layout_marginLeft="24px"
            android:background="@drawable/btn_setting_confrim"
            android:id="@+id/txt_btn_connect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center"
            android:padding="20dp"
            android:textSize="@dimen/activity_setting_text"
            android:text="@string/connect"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>