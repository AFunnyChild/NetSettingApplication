<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_heightPercent="27%"
        app:layout_marginRightPercent="24%"
        app:layout_marginLeftPercent="24%"
        android:layout_centerInParent="true"
        android:background="@mipmap/bg_setting_reset"

        >







            <TextView

                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
                app:layout_marginTopPercent="50%"
                android:text="确定重启吗？"
                android:textColor="#ff333333"
                android:textSize="18sp"
                />


        <TextView
            android:visibility="gone"
            android:id="@+id/tv_content_twe"
            android:layout_below="@+id/tv_content"
            android:layout_centerHorizontal="true"
            app:layout_marginTopPercent="4.3%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="该操作会清空所有数据"
            android:textColor="#ff999999"
            android:textSize="15sp"
            />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/ll_confirm"

                android:layout_width="match_parent"
                android:layout_height="34dp"
                app:layout_marginBottomPercent="7%"
                app:layout_heightPercent="13.4%"  >
                <TextView
                    app:layout_marginLeftPercent="5.8%"
                    android:background="@drawable/btn_setting_cancel"
                    android:id="@+id/btn_cancel"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/color_black"
                    android:layout_centerHorizontal="true"

                    android:textSize="13sp" />
                <View
                    android:layout_width="1dp"
                    app:layout_widthPercent="4%"
                    android:layout_height="match_parent"/>

                <TextView
                    app:layout_marginRightPercent="5.8%"
                    android:background="@drawable/btn_setting_confrim"
                    android:id="@+id/btn_ok"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"

                    android:textSize="13sp" />
            </com.zhy.android.percent.support.PercentLinearLayout>
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>